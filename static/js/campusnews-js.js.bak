    // è·å–CSRF Tokençš„è¾…åŠ©å‡½æ•°
    function getCookie(name) {
        let cookieValue = null;
        if (document.cookie && document.cookie !== '') {
            const cookies = document.cookie.split(';');
            for (let i = 0; i < cookies.length; i++) {
                const cookie = cookies[i].trim();
                if (cookie.substring(0, name.length + 1) === (name + '=')) {
                    cookieValue = decodeURIComponent(cookie.substring(name.length + 1));
                    break;
                }
            }
        }
        return cookieValue;
    }
    
    // åˆå§‹åŒ–æ‡’åŠ è½½åŠŸèƒ½
    function initLazyLoad() {
        // åˆ›å»ºIntersection Observerå®ä¾‹
        const observer = new IntersectionObserver((entries, observer) => {
            entries.forEach(entry => {
                // å½“å…ƒç´ è¿›å…¥è§†å£
                if (entry.isIntersecting) {
                    const card = entry.target;
                    loadCardContent(card);
                    // åŠ è½½ååœæ­¢è§‚å¯Ÿè¯¥å…ƒç´ 
                    observer.unobserve(card);
                }
            });
        }, {
            root: null, // ä½¿ç”¨è§†å£ä½œä¸ºæ ¹å…ƒç´ 
            rootMargin: '200px', // åœ¨å…ƒç´ è¿›å…¥è§†å£å‰200pxå¼€å§‹åŠ è½½
            threshold: 0.1 // å½“å…ƒç´ æœ‰10%è¿›å…¥è§†å£æ—¶è§¦å‘
        });
        
        // ç›‘å¬æ‰€æœ‰å¸–å­å¡ç‰‡å’Œçƒ­é—¨å¡ç‰‡
        document.querySelectorAll('.forum-post-card, .hot-card').forEach(card => {
            observer.observe(card);
        });
    }
    
    // ä¸ºå¡ç‰‡åˆå§‹åŒ–æ‡’åŠ è½½çŠ¶æ€
    function initLazyLoadCard(card) {
        // è·å–å¡ç‰‡ä¸­çš„å›¾ç‰‡å…ƒç´ 
        const img = card.querySelector('img');
        if (img) {
            // å­˜å‚¨åŸå§‹å›¾ç‰‡URL
            const originalSrc = img.src;
            // è®¾ç½®ä¸ºå ä½å›¾æˆ–ä½è´¨é‡ç¼©ç•¥å›¾
            img.setAttribute('data-src', originalSrc);
            img.src = '/media/placeholders/placeholder.svg'; // ä½¿ç”¨SVGå ä½å›¾
            // æˆ–è€…å¯ä»¥ä½¿ç”¨data URIä½œä¸ºå ä½ç¬¦
            // img.src = 'data:image/svg+xml,%3Csvg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 300 200"%3E%3C/svg%3E';
            
            // æ·»åŠ æ‡’åŠ è½½æ ‡è®°ç±»
            img.classList.add('lazy-load');
            card.classList.add('not-loaded');
        }
        
        // éšè—å¡ç‰‡å†…å®¹ï¼Œåªæ˜¾ç¤ºåŸºæœ¬æ¡†æ¶
        const contentElements = card.querySelectorAll('.hot-text, .top-text');
        contentElements.forEach(el => {
            // å…ˆä¿å­˜åŸå§‹å†…å®¹ï¼Œå†ä¿®æ”¹æ˜¾ç¤º
            const originalContent = el.textContent;
            el.setAttribute('data-original', originalContent);
            el.style.opacity = '0.3';
            el.textContent = 'åŠ è½½ä¸­...';
        });
    }
    
    // åŠ è½½å¡ç‰‡å†…å®¹
    function loadCardContent(card) {
        // æ¢å¤å›¾ç‰‡æº
        const img = card.querySelector('img.lazy-load');
        if (img) {
            const originalSrc = img.getAttribute('data-src');
            if (originalSrc) {
                img.src = originalSrc;
                img.classList.remove('lazy-load');
            }
        }
        
        // æ¢å¤å†…å®¹
        const contentElements = card.querySelectorAll('.hot-text, .top-text');
        contentElements.forEach(el => {
            const originalContent = el.getAttribute('data-original');
            if (originalContent) {
                el.textContent = originalContent;
                el.style.opacity = '1';
            }
        });
        
        // æ ‡è®°å¡ç‰‡å·²åŠ è½½
        card.classList.remove('not-loaded');
        card.classList.add('loaded');
        
        // æ·»åŠ åŠ è½½åŠ¨ç”»æ•ˆæœ
        card.style.animation = 'fadeIn 0.5s ease forwards';
    }
